{
  "name": "winddc",
  "version": "1.0.1",
  "description": "a gui to control your external monitors brightness",
  "main": "main.js",
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "repository": {
    "type" : "git",
    "url" : "https://github.com/lorenz-h/WinDDC.git"
  },
  "author": "Lorenz Hetzel",
  "license": "ISC",
  "devDependencies": {
    "electron": "^8.1.1",
    "electron-builder": "^22.4.1",
    "webpack": "^4.42.0"
  },
  "dependencies": {
    "@hensm/ddcci": "0.0.3",
    "material-design-icons": "^3.0.1"
  },
  "build": {
    "files": ["**/*", "build/icon.*", "resources/*"],
    "appId": "com.hetzel.winddc",
    "productName": "WinDDC",
    "copyright": "Copyright Â© 2020 Lorenz Hetzel",
    "mac": {
      "target": [
        "zip"
      ],
      "publish": [
        "github"
      ]
    },
    "win": {
      "publisherName": "Lorenz Hetzel",
      "publish": [
        "github"
      ],
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "tar.gz"
      ]
    },
    "dmg": {
      "icon": "build/icon.icns"
    }
  }
}
